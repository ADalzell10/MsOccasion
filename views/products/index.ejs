<!-- display page for all available products -->
<% layout("layout/boilerplate")%>
   <h1 class="margin-16" style="margin-top: 0;">All Products</h1>
   
   <% for (let product of products){ %>
   <div class="display-card">
      <div class="index-img-size">
         <img class="index-img" src="https://scontent-man2-1.cdninstagram.com/v/t51.2885-15/sh0.08/e35/p640x640/168244990_863722031151553_2522843147298190512_n.jpg?tp=1&_nc_ht=scontent-man2-1.cdninstagram.com&_nc_cat=101&_nc_ohc=dYVNOc7_eIkAX9RAkGZ&edm=APU89FAAAAAA&ccb=7-4&oh=f87f65f0a82f15d8e99d9f3b3907ff4a&oe=60938101&_nc_sid=86f79a" alt="">
      </div>
      <!-- <img src="" alt=""> -->
      <h1 class="display-text border-bottom"><%= product.title %></h1>
      <p class="display-text description"><%= product.description %></p>
      <a href="/products/<%= product._id %>"><button>Show more</button></a> 
   </div>
   <% } %>