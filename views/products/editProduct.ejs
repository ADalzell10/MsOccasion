<% layout("layout/boilerplate")%>

<h1>Edit Product</h1>
<form action="/products/<%= product._id %>?_method=PUT" method="POST">
   <div>
      <label for="title">Product Name</label>
      <input type="text" name="product[title]" id="title" value="<%= product.title %>">
   </div>
   <div>
      <label for="description">Product Description</label>
      <input type="text" name="product[description]" id="description" value="<%= product.description %> ">
   </div>
   <div>
      <label for="price">Product Price</label>
      <input type="text" name="product[price]" id="price" value="<%= product.price %> ">
      <!-- <input type="text" name="product[description]" id="description"> -->
   </div>
   <button>Update Product</button>
   <a href="/products/<%= product._id %>">Back to Product</a>
</form>